<div>
  <label for="">Title</label>
  <input type="text" name="title" value="<%= book.title %>" />
</div>

<div>
  <label for="">Author</label>
  <select name="author">
    <% authors.forEach(author=>{%> <% if(author.id === book.author) { %>
    <option selected label="<%= author.name %>" value="<%= author.id %>">
      <%}else{%>
    

    <option label="<%= author.name %>" value="<%= author.id %>">
      <%}%> <%})%>
    
</div>
<div>
  <label for="">Published Date</label>
  <input type="date" name="publishDate" value="<%= book.publishDate == null? " "
  : book.publishDate.toISOString().split("T")[0] %>">
</div>

<div>
  <label for="">Page Count</label>
  <input type="number" name="pageCount" value="<%= book.pageCount %>" min="1" />
</div>

<div>
  <label for="">Cover Image</label>
  <input type="file" name="cover" />
</div>

<div>
  <label for="">Description</label>
  <textarea name="description" value="<%= book.description %>"></textarea>
</div>
